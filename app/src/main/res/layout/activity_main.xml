<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    tools:context=".ui.AuditMainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_input_data_nama"
        android:hint="@string/hint_name"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="textPersonName"
        android:autofillHints="name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_input_data_lokasi_temuan"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/hint_lokasi_temuan"
        android:inputType="text"
        android:autofillHints="postalAddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_input_data_status"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/hint_status"
        android:inputType="number"
        android:autofillHints="postalCode"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_input_data_lokasi"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/hint_lokasi"
        android:drawableEnd="@drawable/ic_camera"
        android:inputType="textPostalAddress"
        android:autofillHints="postalAddress"/>

    <Button
        android:id="@+id/btn_save_data"
        android:text="@string/btn_save"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <!-- SwipeRefreshLayout membungkus RecyclerView agar list bisa di-refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <!-- RecyclerView untuk menampilkan list sebagai todolist -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_audits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            tools:listitem="@layout/item_audit"
            android:padding="12dp"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_data_placeholder"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</LinearLayout>